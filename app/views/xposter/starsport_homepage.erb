function init(top, right){
	var $document = $(document);
	var $navBarWrapper = $(".js-scrollPaging-navBarWrapper").css({
		"position" : "absolute",
		"top" : top,
		"left" : "auto",
		"right" : right
	});
	var dubIntroNavTop = $navBarWrapper.offset().top;
	var dubIntroNavLeft = $navBarWrapper.offset().left;
	
	var clientHeight = document.documentElement.clientHeight;
	var $wrapper = $(".js-scrollPaging-wrapper");
	var $navBar = $wrapper.find(".js-scrollPaging-navBar");
	var $navBarLi = $navBar.find("li");
	var $navBarLiOn = $navBarLi.eq(0);
	var $page = $wrapper.find(".js-scrollPaging-page");
	var pageTops = $page.map(function(){
		return $(this).offset().top;
	});
	var pageBottoms = $page.map(function(){
		return $(this).offset().top + $(this).height();
	});
	
	$navBarLi.off("click").on("click", function(){
		var $el = $(this);
		setTimeout(function(){
			$navBarLiOn.removeClass("on");
			$navBarLiOn = $el;
			$navBarLiOn.addClass("on");	
		},40);
	});
	$(window).off("scroll").scroll(function(e) {
		var scrollTop = $document.scrollTop();
		if(scrollTop > dubIntroNavTop){
			$navBarWrapper.css({
				"position" : "fixed",
				"top" : 20,
				"left" : dubIntroNavLeft,
				"right": "auto"
			});
		}else{
			$navBarWrapper.css({
				"position" : "absolute",
				"top" : top,
				"left" : "auto",
				"right" : right
			});
		}
		for(var i=0,len=pageTops.length;i<len;i++){
			var pageTop = pageTops[i];
			var pageBottom = pageBottoms[i];
			var num = i;
			if(pageBottom<scrollTop+clientHeight && pageBottom>scrollTop){
				$navBarLiOn.removeClass("on");
				$navBarLiOn = $navBarLi.eq(i).addClass("on");
			}
		}
	});	
}
window.onresize = function(){
	init(0, -60);
}
init(0, -60);
</script>

