<div class="mainbox_wrapper">
    <div class="set_container">
        <div class="set_header">账号设置</div>
        <div class="set_left">
            <div class="set_useravatar">
                <a class="userface" href="<%= link_path "/#{@current_uid}" %>">
                    <img src="<%= picture_url('header', @current_user.logoPic, '200') %>">
                </a>
            </div>
            <ul class="set_nav">
                <li><a href="<%= Settings.profile_url %>">个人设置</a></li>
                <li class="on"><a href="javascript:;">消息设置</a></li>
                <li>
                    <a href="<%= link_path "/personal_settings/privacy" %>">隐私设置</a>
                    <ul class="set_nav">
                        <li class="on"><a href="javascript:;">通用</a></li>
                        <li><a href="javascript:;">黑名单</a></li>
                    </ul>
                </li>                   
                <li><a href="/passport/header">头像设置</a></li>
                <li><a href="/passport/sync_set">同步设置</a></li>
            </ul>

        </div>
        <div class="set_right">
            <div class="set_title">站内消息通知</div>
            <div class="set_message">
                <form action="" method="post">

                    <div class="set_Inner">
                        <div>设置站内消息通知是否提醒</div>
                        <ul>
                            <li>
                                <input type="checkbox" name="notice_fan" <% if @personal_setting.notice_fan %>checked="checked"<% end %> value="1" id="checkbox_notice_fan">                    
                                <label for="checkbox_notice_fan">新粉丝</label>
                            </li>
                            <li>
                                <input type="checkbox" name="notice_message" <% if @personal_setting.notice_message %>checked="checked"<% end %> value="1" id="checkbox_notice_message">                    
                                <label for="checkbox_notice_message">新私信</label>
                            </li>
                            <li>
                                <input type="checkbox" name="notice_comment" <% if @personal_setting.notice_comment %>checked="checked"<% end %> value="1" id="checkbox_notice_comment">                    
                                <label for="checkbox_notice_comment">新评论</label>
                            </li>
                            <li>
                                <input type="checkbox" name="notice_quan" <% if @personal_setting.notice_quan %>checked="checked"<% end %> value="1" id="checkbox_notice_quan">                    
                                <label for="checkbox_notice_quan">被@到</label>
                            </li>
                            <li>
                                <input type="checkbox" name="notice_favorite" <% if @personal_setting.notice_favorite %>checked="checked"<% end %> value="1" id="checkbox_notice_favorite">                    
                                <label for="checkbox_notice_favorite">被赞</label>
                            </li>
                        </ul>
                        <div class="set_message_pic"></div>
                    </div>
                    <div class="set_operate">
                        <a class="confirmBtn">保存设置</a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>