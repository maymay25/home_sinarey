
<%== erb :_seo_meta, locals: {seo_meta:{ name: "user", id: params[:uid], data: @u, custom: "user_follow" }} %> 
<%== erb :_friendly_link, locals: {friendly_link:{ name: "user", uid: params[:uid] }} %>

<%== erb :_follow_page %>

<% content_for :script_own do  %>
<script type="text/javascript">
  require(["page/center/follow"], function(page){
      page.init();
  });
</script>
<% end %>

<% if !@u.isVerified %>
  <% content_for :head do  %>
    <meta name="robots" content="nofollow" />
  <% end %>
<% end %>